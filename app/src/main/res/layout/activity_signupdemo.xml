<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dhruvisha.facebooklogin.signupdemoActivity">

    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:adjustViewBounds="true"
            android:background="@android:color/white"
            android:maxWidth="200dp"
            android:padding="8dp"
            android:src="@drawable/vatscanplus_logo" />
        <!--   <android.support.v7.widget.AppCompatTextView
               android:layout_width="wrap_content"
               android:layout_height="48dp"
               android:layout_centerHorizontal="true"
               android:gravity="center"
               android:paddingEnd="8dp"
               android:textStyle="bold"
               android:textSize="35sp"
               android:layout_margin="16dp"
               android:textColor="#083961"
               android:paddingStart="8dp"
               android:text="@string/sign_up"
               android:textAppearance="@style/TextAppearance.AppCompat.Headline" />-->
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerInParent="true"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/icon"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/tl_login_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Name"
                            android:theme="@style/LoginTextInputLayoutTheme1">

                            <EditText
                                android:id="@+id/et_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_person_black_24dp"
                                android:drawablePadding="16dp"
                                android:drawableStart="@drawable/ic_person_black_24dp"
                                android:drawableTint="#2f85c7"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:lines="1"
                                android:textColor="#3e3e3e"
                                android:textSize="15sp" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:hint="Email"
                            android:theme="@style/LoginTextInputLayoutTheme1">

                            <EditText
                                android:id="@+id/et_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_email_black_24dp"
                                android:drawablePadding="16dp"
                                android:drawableStart="@drawable/ic_email_black_24dp"
                                android:drawableTint="#2f85c7"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress"
                                android:lines="1"
                                android:textColor="#3e3e3e"
                                android:textSize="15sp" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:hint="Phone Number"
                            android:theme="@style/LoginTextInputLayoutTheme1">

                            <EditText
                                android:id="@+id/et_phonenumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                                android:drawablePadding="16dp"
                                android:drawableStart="@drawable/ic_phone_android_black_24dp"
                                android:drawableTint="#2f85c7"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal"
                                android:lines="1"
                                android:textColor="#3e3e3e"
                                android:textSize="15sp" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:hint="Date of Birth"
                            android:theme="@style/LoginTextInputLayoutTheme1">

                            <EditText
                                android:id="@+id/et_dob"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_cake_black_24dp"
                                android:drawablePadding="16dp"
                                android:drawableStart="@drawable/ic_cake_black_24dp"
                                android:drawableTint="#2f85c7"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal"
                                android:lines="1"
                                android:textColor="#3e3e3e"
                                android:textSize="15sp" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:hint="Client ID Number"
                            android:theme="@style/LoginTextInputLayoutTheme1">

                            <EditText
                                android:id="@+id/et_cid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_customer_id_black_24dp"
                                android:drawablePadding="16dp"
                                android:drawableStart="@drawable/ic_customer_id_black_24dp"
                                android:imeOptions="actionDone"
                                android:inputType="textPassword"
                                android:lines="1"
                                android:drawableTint="#2f85c7"
                                android:textColor="#3e3e3e"
                                android:textSize="15sp" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:hint="username"
                            android:textColorHint="#3e3e3e"
                            android:theme="@style/LoginTextInputLayoutTheme1">

                            <EditText
                                android:id="@+id/et_username"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_person_black_24dp"
                                android:drawablePadding="16dp"
                                android:drawableStart="@drawable/ic_person_black_24dp"
                                android:drawableTint="#2f85c7"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:lines="1"
                                android:textColor="#3e3e3e"
                                android:textColorHighlight="#3e3e3e"
                                android:textColorHint="#3e3e3e"
                                android:textColorLink="#3e3e3e"
                                android:textSize="15sp" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            passwordToggleEnabled="true"
                            passwordToggleTint="#2f85c7"
                            android:hint="password"
                            android:textColorHint="#3e3e3e"
                            android:theme="@style/LoginTextInputLayoutTheme1">

                            <EditText
                                android:id="@+id/et_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_lock_black_24dp"
                                android:drawablePadding="16dp"
                                android:drawableStart="@drawable/ic_lock_black_24dp"
                                android:drawableTint="#2f85c7"
                                android:imeOptions="actionDone"
                                android:inputType="textPassword"
                                android:lines="1"
                                android:shadowColor="#2f85c7"
                                android:textColor="#3e3e3e"
                                android:textColorHighlight="#000"
                                android:textColorHint="#3e3e3e"
                                android:textSize="15sp" />

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:hint="Confirm Password"
                            passwordToggleEnabled="true"
                           passwordToggleTint="#2f85c7"
                            android:textColorHint="#3e3e3e"
                            android:theme="@style/LoginTextInputLayoutTheme1">

                            <EditText
                                android:id="@+id/et_confirm_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_lock_black_24dp"
                                android:drawablePadding="16dp"
                                android:drawableStart="@drawable/ic_lock_black_24dp"
                                android:drawableTint="#2f85c7"
                                android:imeOptions="actionDone"
                                android:inputType="textPassword"
                                android:lines="1"
                                android:shadowColor="#2f85c7"
                                android:textColor="#3e3e3e"
                                android:textColorHighlight="#000"
                                android:textColorHint="#3e3e3e"
                                android:textSize="15sp" />

                        </android.support.design.widget.TextInputLayout>


                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/abtn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="40dp"
            android:background="#2f85c7"
            android:text="Sign up"
            android:textColor="#fff"
            android:visibility="visible" />

        <android.support.v4.widget.ContentLoadingProgressBar
            android:id="@+id/cpb_loader"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:visibility="visible" />
    </RelativeLayout>
</RelativeLayout>
